<Window x:Class="F25Week5IntroToWpf.TabControlExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F25Week5IntroToWpf"
        mc:Ignorable="d"
        Title="TabControlExample" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Personal Info">
                <Canvas>
                    <Button Content="Button" Canvas.Left="103" Canvas.Top="67"/>
                    <Label Content="Label" Canvas.Left="194" Canvas.Top="77"/>
                    <TextBox Canvas.Left="170" TextWrapping="Wrap" Text="TextBox" Canvas.Top="146" Width="120"/>

                </Canvas>
            </TabItem>

            <TabItem Header="Hobbies">
                <StackPanel>
                    <CheckBox Content="Singing"/>
                    <CheckBox Content="Gardening"/>
                    <CheckBox Content="Games"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
